<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyarch.FindingPetsSys.mapper.DeviceMapper">

    <resultMap id="BaseResultMap" type="com.easyarch.FindingPetsSys.entity.Device">
        <id property="deviceId" column="device_id" jdbcType="INTEGER"/>
        <result property="deviceName" column="device_name" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="petId" column="pet_id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        device_id,device_name,status,
        pet_id,code
    </sql>
    <update id="updateDevice">
        update devices
        set
            pet_id =#{device.petId},
            status =#{device.status}
        where device_id=#{device.deviceId}
    </update>
    <select id="queryDeviceByDeviceId" resultType="com.easyarch.FindingPetsSys.entity.Device">
        select
        <include refid="Base_Column_List"/>
        from devices
        where device_id=#{id}
    </select>
    <select id="queryDeviceByDeviceCode" resultType="com.easyarch.FindingPetsSys.entity.Device">
        select
        <include refid="Base_Column_List"/>
        from devices
        where code=#{code}
    </select>
</mapper>
