<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyarch.FindingPetsSys.mapper.RolePermissionMapper">

    <resultMap id="BaseResultMap" type="com.easyarch.FindingPetsSys.entity.RolePermission">
        <id property="roleId" column="role_id" jdbcType="INTEGER"/>
        <id property="permissionsId" column="permissions_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        role_id,permissions_id
    </sql>
    <!--    根据roleId查找用户权限-->
    <select id="selectRolePermissionsByRoleId" resultType="com.easyarch.FindingPetsSys.entity.RolePermission">
        select
        <include refid="Base_Column_List"/>
        from role_permissions
        where role_id=#{roleId}
    </select>
    <!--    根据permission查找用户权限-->
    <select id="selectRolePermissionsByPermissionId" resultType="com.easyarch.FindingPetsSys.entity.RolePermission">
        select
        <include refid="Base_Column_List"/>
        from role_permissions
        where permissions_id=#{permissionId}
    </select>
    <!--    根据多个roleId查找用户权限-->
    <select id="selectRolePermissionsByRoleIds" resultType="com.easyarch.FindingPetsSys.entity.RolePermission">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role_permissions
        WHERE role_id IN
        <foreach collection="roleIds" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>
</mapper>
