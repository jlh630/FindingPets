<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyarch.FindingPetsSys.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.easyarch.FindingPetsSys.entity.Permission">
        <id property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="permissionName" column="permission_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        permission_id,permission_name
    </sql>

    <!-- 新增权限 -->
    <insert id="insertPermission" parameterType="com.easyarch.FindingPetsSys.entity.Permission">
        INSERT INTO permissions (permission_name)
        VALUES (#{permission.permissionName})
    </insert>

    <!-- 更新权限 -->
    <update id="updatePermission" parameterType="com.easyarch.FindingPetsSys.entity.Permission">
        UPDATE permissions
        SET permission_name = #{permission.permissionName}
        WHERE permission_id = #{permission.permissionId}
    </update>

    <!-- 删除权限通过permissionId -->
    <delete id="deletePermission" parameterType="java.lang.Long">
        delete FROM permissions WHERE permission_id = #{id}
    </delete>
    <!--    根据权限id查找-->
    <select id="queryPermission" resultType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from permissions
        where permission_id = #{id}
    </select>
    <select id="selectPermissionsByPermissionIds" resultType="com.easyarch.FindingPetsSys.entity.Permission">
        SELECT
        <include refid="Base_Column_List" />
        FROM permissions WHERE permission_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
