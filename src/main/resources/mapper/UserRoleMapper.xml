<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyarch.FindingPetsSys.mapper.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.easyarch.FindingPetsSys.entity.UserRole">
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <id property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,role_id
    </sql>
    <!--    插入用户角色-->
    <insert id="insertUserRole">
        insert into user_roles (user_id,role_id)
        values (#{userRole.userId},#{userRole.roleId})
    </insert>
    <!--    根据用户id查找-->
    <select id="selectUserRolesByUserId" resultType="com.easyarch.FindingPetsSys.entity.UserRole">
        SELECT
        <include refid="Base_Column_List"/>
        from user_roles
        WHERE user_id = #{userId}
    </select>
    <!--    根据角色id查找-->
    <select id="selectUserRolesByRoleId" resultType="com.easyarch.FindingPetsSys.entity.UserRole">
        SELECT
        <include refid="Base_Column_List"/>
        from user_roles
        WHERE role_id = #{roleId}
    </select>
    <select id="selectUserRolesByUserIds" resultType="com.easyarch.FindingPetsSys.entity.UserRole">
        SELECT
        <include refid="Base_Column_List" />
        FROM user_roles
        WHERE user_id IN
        <foreach collection="userIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
